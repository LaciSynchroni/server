FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build

COPY Common /server/Common
COPY Shared /server/Shared
COPY StaticFilesServer /server/StaticFilesServer

WORKDIR /server/StaticFilesServer/

RUN dotnet publish \
        --configuration=Release \
        --os=linux \
        --output=/build \
        LaciSynchroni.StaticFilesServer.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        laci

COPY --from=build /build /opt/LaciSynchroni/StaticFilesServer
RUN chown -R laci:laci /opt/LaciSynchroni/StaticFilesServer && \
    apt-get update && apt-get install curl -y && \
    rm -rf /var/lib/apt/lists/*

USER laci:laci
WORKDIR /opt/LaciSynchroni/StaticFilesServer

CMD ["./LaciSynchroni.StaticFilesServer"]
